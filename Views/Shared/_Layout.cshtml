<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>@ViewData["Title"] - WebDevProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebDevProje.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#"><!---navbar--></a> 
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@_localization.Getkey("Home").Value</a>
                    </li>
                    @{
                        if(ViewBag.KisiNavbar != null)
                        {
                            var kisi = ViewBag.KisiNavbar as Kisi;
                            if (kisi.adminMi == true)
                            {
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Anabilimdali" asp-action="Index">@_localization.Getkey("Anabilimdali").Value</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Poliklinik" asp-action="Index">@_localization.Getkey("Poliklinik").Value</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Kisi" asp-action="Index">@_localization.Getkey("Kisiler").Value</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Doktor" asp-action="Index">@_localization.Getkey("Doktor").Value</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Hasta" asp-action="Index">@_localization.Getkey("Hasta").Value</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Randevu" asp-action="Index">@_localization.Getkey("Randevu").Value</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="DoktorCalismaTakvimi" asp-action="Index">@_localization.Getkey("Doktor Calisma Takvimi").Value</a>
                                </li>
                            }

                            if (kisi.Hasta == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Randevu" asp-action="Randevular">@_localization.Getkey("Randevularım").Value</a>
                                </li>
                            }

                            if (kisi.Doktor == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="DoktorCalismaTakvimi" asp-action="Olustur">@_localization.Getkey("Çalışma Takvimim").Value</a>
                                </li>
                            } 
                        }
                    }
              
         
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dil/Language
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="Home"
                               asp-action="ChangeLanguage"
                               asp-route-culture="en-US">İngilizce</a>
                            <a class="dropdown-item" asp-controller="Home"
                               asp-action="ChangeLanguage"
                               asp-route-culture="tr-TR">Türkçe</a>

                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @{
                            if (ViewBag.KisiNavbar != null)
                            {
                                var kisi = ViewBag.KisiNavbar as Kisi;
                                //show kisi ad soyad
                                string adSoyad = kisi.Ad + " " + kisi.Soyad;
                                <a class="nav-link text-dark" asp-area="" asp-controller="Kisi" asp-action="Profile">@adSoyad</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Kisi" asp-action="Login">@_localization.Getkey("Giriş Yap").Value</a>
                            }
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <p>SAĞLIK HASTANESİ - Tüm Hakları Saklıdır © 2023</p>
            <p>İletişim Bilgileri: +90 (555) 123 4567 | (iletisim@saglik.com)</p>
        </div>
    </footer>
    <style>
        footer {
            background-color: #f8f8f8;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            border-top: 1px solid #e7e7e7;
        }

        .footer-container {
            max-width: 1170px;
            margin: auto;
        }

        footer p {
            margin: 0;
            color: #555;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>

