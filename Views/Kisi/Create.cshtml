@model WebDevProje.Models.Kisi

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>
    @_localization.Getkey("Kisi").Value
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyad" class="control-label"></label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cinsiyet" class="control-label"></label>
                <select asp-for="Cinsiyet" class="form-control">
                    <option value="">@_localization.Getkey("Lütfen Cinsiyet Seçiniz").Value</option>
                    <option value="E">@_localization.Getkey("Erkek").Value</option>
                    <option value="K">@_localization.Getkey("Kdın").Value</option>
                </select>
                <span asp-validation-for="Cinsiyet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DogumTarihi" class="control-label"></label>
                <input asp-for="DogumTarihi" class="form-control" />
                <span asp-validation-for="DogumTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonNo" class="control-label"></label>
                <input asp-for="TelefonNo" class="form-control" />
                <span asp-validation-for="TelefonNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Eposta" class="control-label"></label>
                <input asp-for="Eposta" class="form-control" />
                <span asp-validation-for="Eposta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TcKimlikNo" class="control-label"></label>
                <input asp-for="TcKimlikNo" class="form-control" />
                <span asp-validation-for="TcKimlikNo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Doktor" /> @Html.DisplayNameFor(model => model.Doktor)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Hasta" /> @Html.DisplayNameFor(model => model.Hasta)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Hemsire" /> @Html.DisplayNameFor(model => model.Hemsire)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Isci" /> @Html.DisplayNameFor(model => model.Isci)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Yonetici" /> @Html.DisplayNameFor(model => model.Yonetici)
                </label>
            </div>
            <div class="form-group">
				<label asp-for="Sifre" class="control-label"></label>
				<input asp-for="Sifre" class="form-control" />
				<span asp-validation-for="Sifre" class="text-danger"></span>
            <div class="form-group">
                    <input type="submit" value="@_localization.Getkey("Ekle")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
