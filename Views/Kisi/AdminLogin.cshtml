@model WebDevProje.Models.Kisi

@{
    ViewData["Title"] = "AdminLogin";
}

<h1 class="text-center">Admin Giriş</h1>

<hr />
<div class="row">
    <div class="col-md-4 offset-md-4 mx-auto mt-4">
        <form asp-action="AdminLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label class="control-label font-weight-bold fs-5">@_localization.Getkey("Tc Kimlik Numarası")</label>
                <input asp-for="TcKimlikNo" class="form-control" />
                <span asp-validation-for="TcKimlikNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Sifre" class="control-label font-weight-bold fs-5"></label>
                <input asp-for="Sifre" class="form-control" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between align-items-center">
                <input type="submit" value="Giriş Yap" class="btn btn-primary flex-fill" />
            </div>
        </form>
    </div>
</div>

<div class="col-md-4 offset-md-4 mx-auto mt-4">
    <a asp-action="Login">@_localization.Getkey("Normal Kullanıcılar İçin Giriş Yap")</a>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
